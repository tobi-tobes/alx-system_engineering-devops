#!/usr/bin/env bash
# A script that configures a new Ubuntu machine with Nginx installation
sudo apt-get -y update
sudo apt-get -y install nginx
sudo touch /var/www/html/index.html
sudo bash -c 'cat > /var/www/html/index.html << EOF
Hello World!
EOF'
sudo /etc/init.d/nginx start
sudo bash -c 'cat > /etc/nginx/sites-available/redirect.conf << EOF
server {
    listen 80;
    server_name 54.160.124.170;
    location = /redirect_me {
           return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4$request_uri;
    }
}
EOF'
sudo ln -s /etc/nginx/sites-available/redirect.conf /etc/nginx/sites-enabled/
sudo /etc/init.d/nginx reload
